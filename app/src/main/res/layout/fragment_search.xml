<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.SearchFragment">

        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Fragment4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/search_layout"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="@+id/Fragment4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="7"
                    android:background="@drawable/background_radius"
                    android:orientation="horizontal">

                    <EditText
                        android:hint="검색할 게시물의 제목을 입력해주세요"
                        android:inputType="text|textVisiblePassword"
                        android:imeOptions="actionSearch"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:id="@+id/search_text"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"/>

                    <ImageButton
                        tools:ignore="SpeakableTextPresentCheck"
                        android:id="@+id/search_btn"
                        android:src="@drawable/search_icon"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/search_layout"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/love_btn"
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:textOn="연애"
                        android:textOff="연애"
                        android:textSize="18sp"
                        android:background="@drawable/background_ckeck_button"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <ToggleButton
                        android:id="@+id/game_btn"
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:textOn="게임"
                        android:textOff="게임"
                        android:textSize="18sp"
                        android:background="@drawable/background_ckeck_button"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <ToggleButton
                        android:id="@+id/food_btn"
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:textOn="음식"
                        android:textOff="음식"
                        android:textSize="18sp"
                        android:background="@drawable/background_ckeck_button"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <ToggleButton
                        android:id="@+id/favorite_btn"
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:textOn="취향"
                        android:textOff="취향"
                        android:textSize="18sp"
                        android:background="@drawable/background_ckeck_button"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <ToggleButton
                        android:id="@+id/ani_btn"
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:textOn="만화"
                        android:textOff="만화"
                        android:textSize="18sp"
                        android:background="@drawable/background_ckeck_button"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                    <ToggleButton
                        android:id="@+id/exercise_btn"
                        android:layout_width="90dp"
                        android:layout_height="48dp"
                        android:textOn="운동"
                        android:textOff="운동"
                        android:textSize="18sp"
                        android:background="@drawable/background_ckeck_button"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
                
            </HorizontalScrollView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contentsRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tag_layout"
                android:layout_marginBottom="85dp"
                android:layout_marginTop="115dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/mainColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:weightSum="4"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/bookmark_tap"
                    android:layout_weight="1"
                    android:src="@drawable/favorite_selelct_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/icon_black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/home_tap"
                    android:layout_weight="1"
                    android:src="@drawable/home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/icon_black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/search_tap"
                    android:layout_weight="1"
                    android:src="@drawable/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/icon_black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/profile_tap"
                    android:layout_weight="1"
                    android:src="@drawable/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>